<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% for article in articles  %}
            <div class="post-preview">
                <a href="../public/index.php?route=article&articleId={{ article.id }}">
                    <h2 class="post-title">
                        {{ article.title }}
                    </h2>
                    <h3 class="post-subtitle">
                        {{ article.content }}
                    </h3>
                </a>
                <p class="post-meta">Publier par
                    <a href="#">{{ article.author }}</a>
                    le {{ article.createdat }}</p>
            </div>
            <hr>
            {% endfor %}
            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Anciens articles &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr>