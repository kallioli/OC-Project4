{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/admin.css" />
{% endblock %}

{% block body %}
    {{ dump() }}
    {% if session.get('pseudo') and session.get('role') == 'admin' %}
        <!-- Admin Bar -->
        {{ include('adminbar.html.twig') }}
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Ajouter un post</h1>
                <hr>
                <form method="post" action="../public/index.php?route=<?= $route; ?>">
                    <label for="title">Titre</label>
                    <input type="text" id="title" name="title">
                    <?= isset($errors['title']) ? $errors['title'] : ''; ?>
                    <label for="content">Contenu</label><br>
                    <textarea id="content" name="content"></textarea>
                    <?= isset($errors['content']) ? $errors['content'] : ''; ?>
                    <input type="submit" value="<?= $submit; ?>" id="submit" name="submit">
                </form>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="https://cdn.tiny.cloud/1/dcr7fn3jkar9o2hqjufaq45fxsqerevpp0xk6usxn91kxilz/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
            });
        </script>
    {% endblock %}
{% endblock %}