{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/admin.css" />
{% endblock %}

{% block body %}
    {% if session %}
        <!-- Admin Bar -->
        {{ include('adminbar.html.twig') }}
    {% endif %}

    <div class="container">

        <div class="row">
            <div class="col">
                <h1 class="blog-title">Administration<h1>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col">
                <h2>Articles</h2>
            </div>
        </div>

        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td class="center id">ID</td>
                        <td>Titre</td>
                        <td class="center author">Auteur</td>
                        <td class="center date">Date</td>
                        <td class="center action">Actions</td>
                    </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                <tr>
                    <td class="center">{{ article.id }}</td>
                    <td><a href="../public/index.php?route=editArticle&articleId={{ article.id }}">{{ article.title }}</a></td>
                    <td class="center">{{ article.author }}</td>
                    <td class="center">{{ article.createdAt|slice(0, 10) }}</td>
                    <td>
                        <span class="control-button-row">
                        <a class="btn btn-primary custom-button" href="../public/index.php?route=editArticle&articleId={{ article.id }}">Modifier</a>
                        <a class="btn btn-danger custom-button" href="../public/index.php?route=deleteArticle&articleId={{ article.id }}">Supprimer</a>
                        </span>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row">
            <h2>Commentaires signalés</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td class="center id">ID</td>
                        <td>Message</td>
                        <td class="center author">Identifiant</td>
                        <td class="center date">Date</td>
                        <td class="center action">Actions</td>
                    </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td class="center">{{ comment.id }}</td>
                        <td>{{ comment.content }}</td>
                        <td class="center">{{ comment.pseudo }}</td>
                        <td class="center">{{ comment.createdAt|slice(0, 10) }}</td>
                        <td>
                            <span class="control-button-row">
                                <a class="btn btn-primary custom-button" href="../public/index.php?route=unflagComment&commentId={{ comment.id }}">Désignaler</a>
                                <a class="btn btn-danger custom-button" href="../public/index.php?route=deleteComment&commentId={{ comment.id }}">Supprimer</a>
                            </span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row">
            <h2>Utilisateurs</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td class="center id">ID</td>
                        <td>Identifiant</td>
                        <td class="center author">Rôle</td>
                        <td class="center date">Date</td>
                        <td class="center action">Actions</td>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td class="center">{{ user.id }}</td>
                        <td>{{ user.pseudo }}</td>
                        <td class="center">{{ user.role }}</td>
                        <td class="center">{{ user.createdAt|slice(0, 10) }}</td>
                        <td>
                            <span class="control-button-row">
                                {% if user.role == 'admin' %}
                                <a class="btn btn-danger disabled custom-button" href="../public/index.php?route=deleteUser&userId={{ user.id }}">Supprimer</a>
                                    {% else %}
                                    <a class="btn btn-danger custom-button" href="../public/index.php?route=deleteUser&userId={{ user.id }}">Supprimer</a>
                                {% endif %}
                            </span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}