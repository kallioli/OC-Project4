{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/admin.css" />
{% endblock %}

{% block body %}
    {% if session.get('pseudo') and session.get('role') == 'admin' %}
        <!-- Admin Bar -->
        {{ include('admin/topbar.html.twig') }}
    {% endif %}

    {% if post is defined and post.get('id') is defined %}
      {% set chemin = 'editArticle&articleId='~post.get('id')  %}
        {% set title = post.get('title') %}
        {% set content = post.get('content') %}
        {% else %}
        {% set chemin = 'addArticle' %}
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Ajouter un article</h1>
                <hr>
                <form method="post" action="../public/index.php?route={{ chemin }}">
                    <label for="title">Titre</label>
                    <input type="text" id="title" name="title" value="{{ title }}">
                    {{ errors.title }}
                    <label for="content">Contenu</label><br>
                    <textarea id="content" name="content">{{ content }}</textarea>
                    {{ errors.content }}
                    <input type="submit" value="submit" id="submit" name="submit">
                </form>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="https://cdn.tiny.cloud/1/dcr7fn3jkar9o2hqjufaq45fxsqerevpp0xk6usxn91kxilz/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
            });
        </script>
    {% endblock %}
{% endblock %}